<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.drawingapp.MainActivity">

    <!-- Settings -->
    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnClear"
            android:background="#77ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/clear" />
        <ImageButton
            android:id="@+id/btnBrush"
            android:background="#77ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/brush" />
        <ImageButton
            android:id="@+id/btnPencil"
            android:background="#77ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/pencil" />
    </LinearLayout>

    <com.example.drawingapp.DrawingView
        android:id="@+id/drawing"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF" />

    <!-- Brush color -->
    <LinearLayout
        android:id="@+id/paint_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:background="#ff000000"
            android:tag="#ff000000"
            android:layout_width="@dimen/brush"
            android:layout_height="@dimen/brush"
            android:layout_margin="2dp"
            android:onClick="colorClicked"
            android:src="@drawable/color_button" />
        <ImageButton
            android:background="#ff0000ff"
            android:tag="#ff0000ff"
            android:layout_width="@dimen/brush"
            android:layout_height="@dimen/brush"
            android:layout_margin="2dp"
            android:onClick="colorClicked"
            android:src="@drawable/color_button" />
        <ImageButton
            android:background="#ff00ff00"
            android:tag="#ff00ff00"
            android:layout_width="@dimen/brush"
            android:layout_height="@dimen/brush"
            android:layout_margin="2dp"
            android:onClick="colorClicked"
            android:src="@drawable/color_button" />
        <ImageButton
            android:background="#ffff0000"
            android:tag="#ffff0000"
            android:layout_width="@dimen/brush"
            android:layout_height="@dimen/brush"
            android:layout_margin="2dp"
            android:onClick="colorClicked"
            android:src="@drawable/color_button" />
    </LinearLayout>
</LinearLayout>